function msh() {
    user=$1
    ip=$2
    if [ $# != 2 ]; then
        echo "Use default user ylei!!!"
        user="ylei"
        ip=$1
    fi
    if (( $ip > 50 )) && (( $ip < 80 )); then
        ssh $user@192.168.2.$ip -Y
    elif (( $ip > 100 )) && (( $ip < 130 )); then
        ssh $user@192.168.2.$ip -Y
    elif (( $ip > 200 )) && (( $ip < 210 )); then
        ssh $user@192.168.2.$ip -Y
    else
        ssh $user@192.168.0.$ip -Y
    fi
}

function setk() {
  bash ~/Workspace/Misc/startup.sh 
}

function mkcd() {
    mkdir -p "$@" && eval cd "\"\$$#\""
}

function go() {
    user=$1
    dir=$2
    cd /$HOST/$user/$dir/
}


